# ===========================================
# WavePoint Local Development Configuration
# ===========================================
# Copy this file to .env.local and fill in your values:
#   cp .env.example .env.local

# -------------------------------------------
# Database (Neon) - REQUIRED
# -------------------------------------------
# Create a dev branch at: https://console.neon.tech
# Go to your project -> Branches -> Create Branch from main
DATABASE_URL="postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# -------------------------------------------
# Authentication - REQUIRED
# -------------------------------------------
# Generate with: openssl rand -base64 32
AUTH_SECRET="development-secret-minimum-32-characters-here"

# -------------------------------------------
# Stripe (Test Mode) - REQUIRED for subscriptions
# -------------------------------------------
# Get test keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Signal subscription webhook (optional, for subscription features)
# STRIPE_SIGNAL_WEBHOOK_SECRET="whsec_..."

# -------------------------------------------
# Redis (Upstash) - OPTIONAL
# -------------------------------------------
# Falls back to in-memory rate limiting if not configured
# Note: Upstash free tier only allows one database, so local dev
# shares the same instance as production. Rate limit keys are
# namespaced, so this is safe.
# Get credentials from: https://console.upstash.com
# UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="xxx"

# -------------------------------------------
# AI (Anthropic) - OPTIONAL
# -------------------------------------------
# Required for Signal AI interpretations
# Get API key from: https://console.anthropic.com/settings/keys
# ANTHROPIC_API_KEY="sk-ant-..."

# -------------------------------------------
# Email (Brevo) - OPTIONAL
# -------------------------------------------
# Required for email verification and notifications
# Get API key from: https://app.brevo.com/settings/keys/api
# BREVO_API_KEY=""
# EMAIL_FROM_ADDRESS="noreply@wavepoint.space"
# EMAIL_FROM_NAME="WavePoint"

# Brevo list IDs (optional)
# BREVO_BETA_LIST_ID=""
# BREVO_CONTACT_LIST_ID=""
# BREVO_WAITLIST_LIST_ID=""

# Contact form notification recipient
# CONTACT_NOTIFICATION_EMAIL=""

# -------------------------------------------
# Admin Settings - OPTIONAL
# -------------------------------------------
# Comma-separated list of admin emails
# ADMIN_EMAILS="admin@example.com,another@example.com"

# -------------------------------------------
# Feature Flags
# -------------------------------------------
NEXT_PUBLIC_AUTH_ENABLED="true"
NEXT_PUBLIC_SIGNAL_ENABLED="true"
NEXT_PUBLIC_INVITES_REQUIRED="false"

# -------------------------------------------
# App Configuration
# -------------------------------------------
APP_URL="http://localhost:3000"
